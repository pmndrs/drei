{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2019", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": false,
    "jsx": "react",
    "pretty": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "baseUrl": ".",
    "paths": {
      "three/webgpu": ["./node_modules/@types/three/build/three.webgpu.d.ts"],
      "three/tsl": ["./node_modules/@types/three/build/three.tsl.d.ts"],
      "#three": ["./node_modules/three"],
      "#three-addons": ["./src/utils/three-addons"],
      "#drei-platform": ["./src/utils/drei-platform"],
      "@core/*": ["./src/core/*"],
      "@legacy/*": ["./src/legacy/*"],
      "@webgpu/*": ["./src/webgpu/*"],
      "@external/*": ["./src/external/*"],
      "@experimental/*": ["./src/experimental/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["./node_modules/**/*", "**/*.test.ts", "**/*.test.tsx"]
}
